# ===========================================
# FlashMovies Docker Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Database
DB_PASSWORD=your-secure-database-password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# PayPal Business Payments
# Get these from https://developer.paypal.com/dashboard/applications
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_BUY_BUTTON_ID=your_stripe_buy_button_id

# Frontend URL (for CORS and payment redirects)
FRONTEND_URL=https://flashmovies.xyz
FRONTEND_URL_LOCAL=http://localhost:5173
